.clearfix:after
    display: block
    content: '.'
    height: 0
    line-height: 0
    clear: both
    visibility: hidden

.ellipsis1
    overflow: hidden
    text-overflow: ellipsis
    white-space: nowrap

.ellipsis2
    overflow: hidden
    text-overflow: ellipsis
    display: -webkit-box
    line-clamp: 2
    -webkit-line-clamp: 2
    -webkit-box-orient: vertical
